    <style>
      .rule {
        font-family: Source Sans Pro, sans-serif;
        margin-left: 30%;
        margin-right: 30%;
        margin-bottom: 100px;
      }

      .rule h2 {
        margin-top: 50px;
      }

      .rule ul {
        background-color: rgba(190, 230, 255, 0.227);
        padding-top: 30px;
        padding-bottom: 10px;
        padding-right: 30px;
        margin-bottom: 20px;
      }

      .rule li {
        padding-bottom: 20px;
      }

      .rule p,
      li {
        color: rgb(112, 134, 152);
      }

      @media screen and (max-width: 1200px) {
        .rule {
          margin-left: 10%;
          margin-right: 10%;
        }
